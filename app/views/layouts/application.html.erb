    <div class="navbar navbar-fixed-top nav-main">
      <div class="custom-color navbar-inner">
        <div class="container">
          <div class="row-fluid navigation">
            <div class="span2">
              <a class="scigit-brand brand" href="/"></a>
            </div>
            <div class="span10">
              <div class="dropdown">
                <a id="label-username" class="dropdown-toggle username" data-toggle="dropdown" href="#">
                  {{ get_user_username() }}<b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="label-username">
                  <li><a tabindex="-1" href="/users/profile">Settings</a></li>
                  <li><a tabindex="-1" href="/users/profile/{{ get_user_id() }}">My Profile View</a></li>
                  <li class="divider"></li>
                  <li><a tabindex="-1" href="/auth/logout">Logout</a></li>
                </ul>
              </div>
              <ul class="navitems fake">
                <li class="divider"><div class="inner"></div></li>
              </ul>
              <div class="dropdown">
                <a id="label-projects" class="dropdown-toggle username" data-toggle="dropdown" href="#">
                  My Projects<b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="label-projects">
                  <li><a tabindex="-1" href="#createProject" data-toggle="modal" href="#">Create New Project</a></li>
                  <li class="divider"></li>
                  <li><a tabindex="-1" href="/projects/me">Manage Projects</a></li>
                  <li><a tabindex="-1" href="/projects/me">Manage Subscriptions</a></li>
                </ul>
              </div>
              <ul class="navitems">
                <li class="divider"><div class="inner"></div></li>
                  <li {% if page == 'Explore' %}class="current"{% endif %}><a href="/projects/explore">Public</a></li>
                  <li class="divider"><div class="inner"></div></li>
                  <li {% if page == 'Login' %}class="current"{% endif %}><a href="/auth/login">Login</a></li>
              </ul>
              <div class='input-append'>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

		<div class="container">
      <div class="content">
        <%= yield %>
      </div>
    </div>
