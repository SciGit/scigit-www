<%= render :partial => 'project_permissions/new_modal' %>

<div id="members" class="well-list">
  <div class="well-list-header">
    <div class="well-list-header-inner">
      <div class="well-list-header-buttons">
        <h3>Members</h3>
        <% if can? :manage, project %>
          <%= link_to raw('<i class="icon-plus"></i> Add'), '',
              :class => 'btn btn-primary btn-valign',
              :data => {:toggle => 'modal', :target => '#addMemberModal'} %>
        <% end %>
      </div>
    </div>
  </div>
  <% members.each do |member| %>
    <div class="well-list-item">
      <div class="well-list-item-inner">
        <% if member.can? :manage, project %>
          <%= link_to '#', :rel => 'tooltip', :title => 'Coauthor' do %>
            <i class="icon-trophy"></i>
          <% end %>
        <% elsif member.can? :update, project %>
          <a class="rawlink" rel="tooltip" title="Contributor">
            <i class="icon-edit"></i>
          </a>
        <% elsif member.can? :read, project %>
          <a class="rawlink" rel="tooltip" title="Reader">
            <i class="icon-eye-open"></i>
          </a>
        <% end %>
        <%= link_to member.fullname, user_path(member.id) %>
        <% if can? :manage, @project %>
          <div class="buttons shrink">
            <a class="editMember btn btn-default" href="#editMember"
             data-user_id="{{ perm.user_id }}" data-user_name="{{ perm.username }}"
             data-user_perm="{{ perm.permission }}"
             title="Edit {{ perm.username }}'s permissions"
             data-toggle="modal"
             {% if (perm.permission b-and 16) %}disabled="disabled"{% endif %}>
              <%= fa_icon "pencil" %>
            </a>
            <a class="deleteMember btn-danger btn btn-small" href="#" data-user_id="{{ perm.user_id }}"
             title="Remove {{ perm.username }} from project"
             {% if (perm.permission b-and 16) %}disabled="disabled"{% endif %}>
              <%= fa_icon "trash-o" %>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
