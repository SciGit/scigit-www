<div class="row-fluid">
  <div class="span6 sign-up-form">
    <div class="sign-up-form-inner">
      <h2>Sign Up</h2>
      <hr class="soften" />

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.label :fullname %>
          <%= f.text_field :fullname, :class => 'full-width-input' %>
        </div>

        <div>
          <%= f.label :email %>
          <%= f.email_field :email, :class => 'full-width-input' %>
        </div>

        <div>
          <%= f.label :password %>
          <%= f.password_field :password, :class => 'full-width-input' %>
        </div>

        <div>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, :class => 'full-width-input' %>
        </div>

        <div>
          <%= f.submit "Sign Up", :class => 'btn btn-primary' %>
        </div>

        <div>
          <%= render :partial => "users/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="span6">
    <div class="screenshot">
      <%= image_tag('illustration.png') %>
    </div>
  </div>
</div>

