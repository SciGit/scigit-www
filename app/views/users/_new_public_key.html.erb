<div class="modal fade" id="newPublicKeyModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-small">
    <div class="modal-content">
      <%= render :partial => 'shared/form_alerts' %>
      <%= form_tag users_settings_public_keys_url, :method => 'put' do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Add Public Key</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Name</label>
            <%= text_field_tag 'name', '', :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="public_key">Public Key</label>
            <%= text_area_tag 'public_key', '', :class => 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <input ajax-submit="#newPublicKeyModal" type="submit" value="Add Public Key" class="btn btn-success" />
          <%= link_to 'Cancel', '', :class => 'btn btn-default btnCancel', :data => {:dismiss => 'modal'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
