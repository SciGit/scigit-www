{%

set search = {
  'label' : 'Search',
  'name' : 'search',
  'id' : 'search',
  'class' : 'search',
  'value' : set_value('search'),
  'maxlength' : 80,
  'size' : 30,
  'placeholder' : 'Search',
  'required' : true,
