                </ul>
              </div>
              <ul class="navitems fake">
                <li class="divider"><div class="inner"></div></li>
              </ul>
              <div class="dropdown">
                <a id="label-projects" class="dropdown-toggle username" data-toggle="dropdown" href="#">
                  My Projects<b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="label-projects">
                  <li><a tabindex="-1" href="#createProject" data-toggle="modal" href="#">Create New Project</a></li>
                  <li class="divider"></li>
                  <li><a tabindex="-1" href="/projects/me">Manage Projects</a></li>
                  <li><a tabindex="-1" href="/projects/me">Manage Subscriptions</a></li>
                </ul>
              </div>
            {% endif %}
            {% block nav_items %}
              <ul class="navitems">
                <li class="divider"><div class="inner"></div></li>
                {% if is_logged_in() %}
                  <li {% if page == 'Explore' %}class="current"{% endif %}><a href="/projects/explore">Public</a></li>
                  <li class="divider"><div class="inner"></div></li>
                {% endif %}
                {% if not is_logged_in() %}
                  <li {% if page == 'Login' %}class="current"{% endif %}><a href="/auth/login">Login</a></li>
                {% endif %}
              </ul>
            {% endblock %}
              <div class='input-append'>
                {{ form_open('/search', {class: 'navbar-search form-horizontal'}) | raw }}
                  {{ form_input(search) | raw }}
                  {{ form_input(submit) | raw }}
                {{ form_close() | raw }}
              </div>
            </div>
