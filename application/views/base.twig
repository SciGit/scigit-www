    <div class="navbar navbar-fixed-top">
      <div class="custom-color navbar-inner">
        <div class="container">
          <a class="scigit-brand brand" href="#">SciGit</a>
          <div class="nav-fixed">
						<ul class="nav">
							{% block nav_items %}
                <li><a class="navitem{% if page == 'Home' %} current{% endif %}" href="/">Home</a></li>
								<li><a class="navitem{% if page == 'Projects' %} current{% endif %}" href="/projects/me">Projects</a></li>
								<li><a class="navitem{% if page == 'Discover' %} current{% endif %}" href="/projects/discover">Discover</a></li>
							{% endblock %}
						</ul>
            {% block my_account %}
              <a class="btn btn-danger pull-right navbutton" href="/auth/logout">Logout</a>
						  <a class="btn btn-primary pull-right navbutton" href="/users/profile">My Account</a>
            {% endblock %}
