{% extends "base.twig" %}

{% block title "Search" %}

{% block content %}

<div class="page-header">
  <p class="breadcrumbs">
    {{ anchor("/", "Home") | raw }} <span class="divider">&gt;</span>
    <span class="current">Search</span>
  </p>
</div>

{% if results %}
  {% for result in results %}
    <div class="well light-well">
      {{ anchor("/projects/view/#{result.id}", result.name) | raw }}
      <div class="pull-right date p">
        Updated {{ time_ago(result.latest_change) }}
      </div>
      <hr class="soften" />
      <div class="activity-msg">
        {{ result.description | default("No description.") | raw }}
      </div>
    </div>
  {% endfor %}
{% else %}
  <p>No results. Try a different search query.</p>
{% endif %}

<div class="separator"></div>

{% endblock %}
