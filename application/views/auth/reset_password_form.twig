{% extends "base.twig" %}

{% block title "Reset Password" %}

{%
set new_password = {
	'name': 'new_password',
	'id': 'new_password',
	'maxlength': 20,
	'size': 30,
}
%}
{%
set confirm_new_password = {
	'name': 'confirm_new_password',
	'id': 'confirm_new_password',
	'maxlength': 20,
	'size' : 30,
}
%}

{% block content %}
{{ form_open() | raw }}
		{{ form_label('New Password', new_password['id']) | raw }}
		{{ form_password(new_password) | raw }}
		{{ form_error(new_password['name']) | raw }}
		{{ errors[new_password['name']] }}
		{{ form_label('Confirm New Password', confirm_new_password['id']) | raw }}
		{{ form_password(confirm_new_password) | raw }}
		{{ form_error(confirm_new_password['name']) | raw }}
		{{ errors[confirm_new_password['name']] }}
		<br />
		{{ form_submit({class: 'btn', name: 'change'}, 'Change Password') | raw }}
{{ form_close() | raw }}
{% endblock %}
