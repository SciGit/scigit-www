{% extends "base.twig" %}

{% block title "Change Email" %}

{%
set password = {
	'name': 'password',
	'id': 'password',
	'size': 30,
}
%}
{%
set email = {
	'name': 'email',
	'id': 'email',
	'value': set_value('email'),
	'maxlength': 80,
	'size': 30,
}
%}

{% block content %}
{{ form_open() | raw }}
	{{ form_label('Password', password['id']) | raw }}
	{{ form_password(password) | raw }}
	{{ form_error(password['name']) | raw }}
	{{ errors[password['name']] }}
	{{ form_label('New email address', email['id']) | raw }}
	{{ form_input(email) | raw }}
	{{ form_error(email['name']) | raw }}
	{{ errors[email['name']] }}
	<br />
	{{ form_submit({class: 'btn', name: 'change'}, 'Send confirmation email') | raw }}
{{ form_close() | raw }}
{% endblock %}
