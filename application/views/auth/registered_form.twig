{% extends "base.twig" %}

{% block title "Signed Up" %}

{% block content %}

<script>
$(function() {
  $('a[auto-download]').each(function(){
    var $this = $(this);
    setTimeout(function() {
      window.location = $this.attr('href');
    }, 2000);
  });
});
</script>

<div class="download">
  <h2>Downloading SciGit</h2>
  <br />
  <p>Your SciGit download should automatically start within seconds.</p>
  <p>If it doesn't, <a auto-download href="/download">restart the download</a>.</p>
</div>

<hr class="soften" />

<div class="download-info">
  <div class="row-fluid">
    <div class="span4 well">
      <div class="number">
        1
      </div>
      <h2>Download</h2>
      <hr class="soften" />
      <p>From your browser's Downloads window, double click the .exe file that
      just downloaded.</p>
    </div>
    <div class="span4 well">
      <div class="number">
        2
      </div>
      <h2>Install SciGit</h2>
      <hr class="soften" />
      <p>Follow along with the instructions provided by the installer.</p>
    </div>
    <div class="span4 well">
      <div class="number">
        3
      </div>
      <h2>Run SciGit</h2>
      <hr class="soften" />
      <p>Double-click the SciGit icon in your Start Menu to get all set, and
      you're good to go.</p>
    </div>
  </div>
  <div class="separator"></div>
  <a class="butn butn-primary butn-xlarge" href="/">Finish</a>
</div>
{% endblock %}
