{% extends "base.twig" %}

{% block title "Create Project" %}

{% block content %}

<div class="page-header">
	<h1>Create Project</h1>
</div>

<div class="row">
	<div class="span6">
	{{ form_open('', {class: 'well'}) | raw }}
		{{ validation_errors() | raw }}
		<p>{{ message }}</p>
		{{ form_label('Name', 'name') | raw }}
		{{ form_input('name', set_value('name')) | raw }} <br />
		{{ form_submit({class: 'btn btn-primary', name: 'create_project'}, 'Create') | raw }}
		&nbsp; &nbsp; 
		{{ form_checkbox('public', 1, set_value('public')) | raw }}
		Public
	{{ form_close() | raw }}
	</div>
</div>
{% endblock %}
