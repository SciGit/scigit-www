{% extends "base.twig" %}

{% block title "Explore" %}

{% block content %}

<p class="breadcrumbs">
  {{ anchor("/", "Home") | raw }} <span class="divider">&gt;</span>
  <span class="current">{{ anchor("/projects/explore", "Public") | raw }}</span>
</p>

<div class="separator-xsmall"></div>

<div class="page-header">
  <h1>Public Projects</h1>
</div>

<div class="row-fluid">
  <div class="span6 well-list">
    <table class="table">
      <tr>
        <th>
          <h2>Popular Projects</h2>
          <h4>&nbsp;Projects with the most subscribers.</h4>
        </th>
      </tr>
      {% for project in projects %}
        <tr>
          <td class="project" valign="middle" data-proj_id="{{ project.id }}">
            <div class="title">
              {{ anchor("/projects/view/#{project.id}", project.name) | raw }}
            </div>
            <div class="buttons">
              <div class="button">
                <a href="#" rel="tooltip" title="Subscribers" class="rawlink">
                  {{ project.member_count }}
                  <i class="icon-star"></i>
                </a>
              </div>
            </div>
            <div class="description">
              {% if project.description %}
                {{ wordwrap(project.description, 50) }}
              {% else %}
                No description.
              {% endif %}
            </div>
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>

  <div class="span6 blue-well-list">
    <table class="table">
      <tr>
        <th>
          <h2>Recommended Projects</h2>
          <h4>&nbsp;Interesting projects that SciGit staff recommend.</h4>
        </th>
      </tr>
      {% if featured_projects %}
        {# XXX: This should really be templated #}
        {% for project in featured_projects %}
          <tr>
            <td class="project" valign="middle" data-proj_id="{{ project.id }}">
              {{ anchor("/projects/view/#{project.id}", project.name) | raw }}
              <div class="buttons">
                <div class="button">
                  <a href="#" rel="tooltip" title="Subscribers" class="rawlink">
                    {{ project.member_count }}
                    <i class="icon-star"></i>
                  </a>
                </div>
              </div>
              <div class="description">{{ wordwrap(project.description, 50) }}</div>
            </td>
          </tr>
        {% endfor %}
      {% else %}
        <tr class="nohover">
          <td valign="middle">
            <p>There are currently no featured projects.</p>
          </td>
        </tr>
      {% endif %}
    </table>
  </div>
</div>

{% endblock %}
