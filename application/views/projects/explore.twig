{% extends "base.twig" %}

{% block title "Explore" %}

{% block content %}

<div class="page-header">
  <p class="breadcrumbs">
    {{ anchor("/projects", "Projects") | raw }} <span class="divider">&gt;</span>
    <span class="current">Explore</span>
  </p>
</div>

<div class="row-fluid">
  <div class="span6 well light-well">
    <h3>Popular Projects</h3>
    <hr class="soften" />
    <ul>
      {% for project in projects %}
        <li class="project-entry">
          <p>{{ project.member_count }} Subscribers</p>
          {{ anchor("/projects/view/#{project.id}", project.name) | raw }}
          <p class="date pull-right">{{ time_ago(project.latest_change) }}</p>
          <div class="project-description">{{ wordwrap(project.description, 50) }}</div>
          {% if not loop.last %}
            <hr class="soften" />
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>

  <div class="span6 well blue-well">
    <h3>Featured Projects</h3>
    <hr class="soften" />
    <ul>
      {% if featured_projects %}
        {# XXX: This should really be templated #}
        {% for project in featured_projects %}
          <li class="project-entry">
            {{ anchor("/projects/view/#{project.id}", project.name) | raw }}
            <p class="date pull-right">{{ time_ago(project.latest_change) }}</p>
            <div class="project-description">{{ wordwrap(project.description, 50) }}</div>
            {% if not loop.last %}
              <hr class="soften" />
            {% endif %}
          </li>
        {% endfor %}
      {% else %}
        <p>There are currently no featured projects.</p>
      {% endif %}
    </ul>
  </div>
</div>

{% endblock %}
